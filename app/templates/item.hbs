<GeneralContainer>
  <div class="product item-details-page {{if this.isZoomed 'is-zoomed'}}">
    <Product::Image
      @src={{this.productImage}}
      @toggleZoom={{this.toggleZoom}}
    />
    <Product::Details
      @isDetails={{true}}
      @name={{this.model.name}}
      @rating={{this.model.rating}}
      @price={{this.model.price}}
      @colors={{this.model.colors}}
      @color={{this.color}}
      @onChangeColor={{this.onChangeColor}}
    />
  </div>
  <div class="card p-5 product-description">
    <h5>{{this.model.description}}</h5>
    <h5 class="mt-3">Features</h5>
    <ul>
      {{#each this.model.features as |feature|}}
        <li>{{feature}}</li>
      {{/each}}
    </ul>
  </div>
</GeneralContainer>