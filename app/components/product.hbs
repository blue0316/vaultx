{{#if @product}}
  <LinkTo
    data-test-product={{@product.id}}
    @route="item"
    @model={{@product.id}}
    class="product"
  >
    <Product::Image @src={{this.productImage}} />
    <Product::Details
      @id={{@product.id}}
      @name={{@product.name}}
      @price={{@product.price}}
      @rating={{@product.rating}}
    />
  </LinkTo>
{{/if}}